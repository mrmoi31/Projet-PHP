<IfModule mod_rewrite.c>
	RewriteEngine On
	
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d

	RewriteRule ^medecins/?$ /Projet-PHP/API/medecin_api.php [L]
	RewriteRule ^medecins/([0-9]+)$ /Projet-PHP/API/medecin_api.php?id=$1 [L]
	RewriteRule ^usagers/?$ /Projet-PHP/API/APIPatient.php [L]
	RewriteRule ^usagers/([0-9]+)$ /Projet-PHP/API/APIPatient.php?id=$1 [L]
	RewriteRule ^consultations/?$ /Projet-PHP/API/APIConsultation.php [L]
	RewriteRule ^consultations/([0-9]+)$ /Projet-PHP/API/APIConsultation.php?id=$1 [L]
	RewriteRule ^stats/medecins /Projet-PHP/API/APIStats.php?cible=med [L]
	RewriteRule ^stats/patients /Projet-PHP/API/APIStats.php?cible=usa [L]
	
</IfModule>