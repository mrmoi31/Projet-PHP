<?php
function connexionBdAuth() {
    $server = "localhost";
    $db = "projet-api-bd";
    $login = "root";
    $mdp = "";

    //Connection base de donnÃ©e
    try{
        $linkpdo = new PDO("mysql:host=$server; dbname=$db", $login, $mdp);
    } 
    //Verification connection
    catch (Exception $e) {
        die('Erreur: ' . $e->getMessage());
    }}
?>

